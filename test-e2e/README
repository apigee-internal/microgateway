# Install bats for test framework
npm install -g bats

# Install yq to edit EMG yaml files
npm install -g yq

# Run PreSubmit Test
MOCHA_USER=<username> MOCHA_PASSWORD=<password> MOCHA_ORG=<orgName> MOCHA_ENV=<env> bats PullRequestTests.bats

# Run Nightly Test
MOCHA_USER=<username> MOCHA_PASSWORD=<password> MOCHA_ORG=<orgName> MOCHA_ENV=<env> bats NightlyTests.bats

